<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presenter.ui.profile.ProfileFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Профиль"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="35dp"
        android:layout_marginStart="140dp"/>


    <ImageView
        android:id="@+id/iv_avatap"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/icon_man"
        android:layout_marginTop="115dp"
        android:layout_marginStart="180dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Сеитбек уулу Актан"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:layout_marginTop="200dp"
        android:layout_marginStart="80dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_tv"
        android:layout_width="365dp"
        android:layout_height="154dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/bg_grey">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пол: Мужской"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="18dp"
            android:layout_marginStart="50dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Возраст: 17 лет"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp"
            android:layout_marginStart="50dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Логин: batyrbekov.a.s.2006@gmail.com"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="98dp"
            android:layout_marginStart="50dp"
            android:textColor="@color/black"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_tv_two"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_grey"
        app:layout_constraintTop_toBottomOf="@id/con_tv">

        <TextView
            android:id="@+id/tv_text_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="Занятия"
            android:layout_marginStart="14dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_completed_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_text_"
            android:textSize="24sp"
            android:text="4"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:textColor="#1F65EE"/>

        <TextView
            android:id="@+id/tv_completed_text_four"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_completed_four"
            android:textSize="12sp"
            android:text="Занятий за сегодня"
            android:layout_marginStart="16dp"
            android:layout_marginTop="1dp"
            android:textColor="#80000000"
            android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_line_four"
            android:layout_width="4dp"
            android:layout_height="70dp"
            app:layout_constraintStart_toEndOf="@id/tv_completed_text_four"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_tv"
            android:layout_marginTop="29dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_completed_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv_line_four"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp"
            android:text="116"
            android:layout_marginStart="17dp"
            android:layout_marginTop="40dp"
            android:textColor="#1F65EE"/>

        <TextView
            android:id="@+id/tv_completed_text_five"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv_line_four"
            app:layout_constraintTop_toBottomOf="@id/tv_completed_five"
            android:textSize="12sp"
            android:text="Калорий сожжено"
            android:layout_marginStart="17dp"
            android:layout_marginTop="1dp"
            android:textColor="#80000000"
            android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_line_five"
            android:layout_width="4dp"
            android:layout_height="70dp"
            app:layout_constraintStart_toEndOf="@id/tv_completed_text_five"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_tv"

            android:layout_marginTop="29dp"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <TextView
            android:id="@+id/tv_completed_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv_line_five"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp"
            android:text="456"
            android:layout_marginStart="17dp"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="28dp"
            android:textColor="#1F65EE"/>

        <TextView
            android:id="@+id/tv_completed_text_six"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv_line_five"
            app:layout_constraintTop_toBottomOf="@id/tv_completed_six"
            android:textSize="12sp"
            android:text="Занятий за все время"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="17dp"
            android:layout_marginTop="1dp"
            android:textColor="#80000000"
            android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="71dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="Изменить данные"
        android:textAllCaps="false"
        android:backgroundTint="#1BA1FF"
        android:paddingStart="10dp"
        app:icon="@drawable/pencil"
        app:iconGravity="end"
        app:cornerRadius="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>